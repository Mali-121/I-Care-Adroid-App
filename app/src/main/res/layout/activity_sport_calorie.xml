<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.diet.SportCalorieActivity">

    <FrameLayout
        android:id="@+id/fl_header_image"
        android:layout_width="410dp"
        android:layout_height="66dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_forgot_password_activity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="top" />
    </FrameLayout>

    <TextView
        android:id="@+id/Enter_sport_and_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="16dp"
        android:text="Insert Sports Items Calories Here"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/fl_header_image"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/sport_and_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_bmi_bg"
        android:ems="10"
        android:hint="Enter Sport Item"
        android:padding="@dimen/et_padding"
        android:textSize="@dimen/et_textSize"
        app:layout_constraintTop_toBottomOf="@+id/Enter_sport_and_cal"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/Calories2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_bmi_bg"
        android:ems="10"
        android:hint="Enter Calories"
        android:padding="@dimen/et_padding"
        android:textSize="@dimen/et_textSize"
        app:layout_constraintTop_toBottomOf="@+id/sport_and_cal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/confirm3"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="320dp"
        android:background="@drawable/button_background"
        android:fontFamily="sans-serif"
        android:text="Confirm"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>